#include <Servo.h>
#include <ros.h>
#include <std_msgs/Int32.h>

Servo myServo;
int pos = 0;
int flag = 0;
int servo1 = 0;

ros::NodeHandle nh;
std_msgs::Int32 servo_msg;

void servoCallback(const std_msgs::Int32& msg)
{
  servo1 = msg.data;
  Serial.println("Let's start");

  if (servo1 < 100 && flag == 0)
  {
    servo_on();
    delay(1000);
    flag = 1;
  }

  if (servo1 > 100 && flag == 1)
  {
    servo_off();
    delay(1000);
    flag = 0;
  }
}

ros::Subscriber<std_msgs::Int32> servo_sub("/ldr_data", &servoCallback);

void servo_on() {
  for (pos = 0; pos <= 90; pos += 1) {
    myServo.write(pos);
    delay(5);
  }
  for (pos = 90; pos >= 0; pos -= 1) {
    myServo.write(pos);
    delay(2);
  }
}

void servo_off() {
  myServo.write(0);
  delay(2);
}

void setup() {
  Serial.begin(9600);
  myServo.attach(4);
  nh.initNode();
  nh.subscribe(servo_sub);
}

void loop() {
  nh.spinOnce();
  delay(1000);
}
